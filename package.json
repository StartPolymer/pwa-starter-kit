{
  "name": "pwa-starter-kit-plus",
  "version": "0.8.0",
  "flat": true,
  "contributors": [
    "The Polymer Authors"
  ],
  "license": "BSD-3-Clause",
  "repository": "StartPolymer/pwa-starter-kit-plus",
  "scripts": {
    "start": "polymer serve",
    "build": "npm run build:prpl-server && npm run build:static",
    "build:prpl-server": "polymer build --auto-base-path && rm -rf server/build && mv build server/ && renamer --find node_modules --replace node_assets 'server/build/**' && replace node_modules node_assets server/build -r -s",
    "build:static": "polymer build",
    "fix": "npm run fix:js && npm run fix:json && npm run fix:md",
    "fix:js": "npm run lint:js -- --fix",
    "fix:json": "npm run lint:json -- --fix",
    "fix:md": "npm run lint:md -- --fix",
    "lint": "npm run lint:js && npm run lint:json && npm run lint:md",
    "lint:es": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\"",
    "lint:js": "npm run lint:es -- .",
    "lint:json": "prettylint **/*.json",
    "lint:md": "prettylint **/*.md",
    "precommit": "lint-staged",
    "serve:prpl-server": "prpl-server --root server/build",
    "serve:static": "polymer serve --port 5000 build/es5-bundled",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "mocha test/integration --timeout=10000",
    "test:unit": "polymer test --module-resolution=node --npm -l chrome -l firefox",
    "test:regenerate_screenshots": "mocha test/integration/screenshots-baseline/regenerate.js --timeout=15000"
  },
  "dependencies": {
    "@polymer/app-layout": "^3.0.0-pre.18",
    "@polymer/lit-element": "^0.5.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "pwa-helpers": "^0.8.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "axe-core": "^3.0.0",
    "babel-eslint": "^8.2.3",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "mocha": "^5.1.0",
    "pixelmatch": "^4.0.2",
    "polymer-cli": "^1.7.1",
    "polyserve": "^0.27.0",
    "prettier": "1.12.1",
    "prettylint": "^1.0.0",
    "prpl-server": "^1.1.0",
    "puppeteer": "^1.3.0",
    "renamer": "^0.6.1",
    "replace": "^0.3.0",
    "wct-browser-legacy": "^1.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --no-ignore --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettylint --fix",
      "git add"
    ]
  }
}
